<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Drop Shadow Stack -->
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                />

            <solid android:color="#00CCCCCC" />

        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="1.5dp"
                android:left="1.1dp"
                android:right="1.1dp"
              />

            <solid android:color="#10CCCCCC" />

        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="1.8dp"
                android:left="1.3dp"
                android:right="1.3dp"
              />

            <solid android:color="#20CCCCCC" />

        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="2.1dp"
                android:left="1.5dp"
                android:right="1.5dp"
               />

            <solid android:color="#30CCCCCC" />

        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="2.4dp"
                android:left="1.8dp"
                android:right="1.8dp"
             />

            <solid android:color="#50CCCCCC" />

        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="2.6dp"
                android:left="2.1dp"
                android:right="2.1dp"
                />

            <solid android:color="#60CCCCCC" />

        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />

        </shape>
    </item>

</layer-list>